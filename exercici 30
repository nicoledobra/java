package com.company;

import java.util.Scanner;

public class Loop3{

   public static void main(String[] args) {
  // write your code here
       Scanner sc = new Scanner(System.in);
       int um = 0;
       int num;
       System.out.print("Insert an integer number: ");
       num = sc.nextInt();
       while (num!=0){
           um ++;
           System.out.print("Insert an integer number: ");
           num = sc.nextInt();
       }
       System.out.println("The total numbers read is " + um );
   }
}
